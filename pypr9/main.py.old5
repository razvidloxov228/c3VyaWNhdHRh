import uvicorn
from fastapi import FastAPI

app = FastAPI()

@app.get("/search")
def search_items(query: str, limit: int = 10):
    return {
        "query": query,
        "limit": limit,
        "results": f"Знайдено результати для '{query}' (максимум {limit})"
    }

if __name__ == "__main__":
    uvicorn.run(app, host="0.0.0.0", port=8000)
